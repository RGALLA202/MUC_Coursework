<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.rgalla202.weatherdb.MainActivity"
    android:orientation="vertical"
    android:weightSum="1">

    <TextView
        android:textStyle="bold"
        android:text="BBC Weather Forecast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lblappName"
        android:textSize="18sp"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location Picker"
        android:id="@+id/lbltip"
        android:layout_marginTop="27dp"
        android:layout_below="@+id/lblappName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:id="@+id/spinner"
        android:layout_below="@+id/lbltip"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_weight="0.09" />

    <Button
        android:text="3 Day Forcast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:id="@+id/btnthreedf"
        android:background="@drawable/buttondesign"
        android:textStyle="bold"
        android:textSize="22sp"
        android:layout_below="@+id/spinner"
        android:layout_centerHorizontal="true" />

    <TextView

        android:text="your favourite location is:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnthreedf"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:layout_marginTop="54dp"
        android:id="@+id/lblSavedFav" />

    <Button
        android:background="@drawable/buttondesign"
        android:textStyle="bold"
        android:textSize="22sp"
        android:text="Your Favourite Location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lblSavedFav"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:id="@+id/btnFavForecast" />

</LinearLayout>